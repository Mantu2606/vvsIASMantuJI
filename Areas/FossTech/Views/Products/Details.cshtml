@model FossTech.Models.ProductModels.Product

@{
    ViewData["Title"] = "Details";
}
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Product Details</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProductCategories)
                            </dt>
                            <dd class="col-sm-10">
                                @*@Html.DisplayFor(model => model.Category.Name)*@
                                <ul>
                                    @foreach (var category in Model.ProductCategories)
                                    {
                                        <li>@category.Category.Name</li>
                                    }
                                </ul>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProductSubCategories)
                            </dt>
                            <dd class="col-sm-10">
                                @*@Html.DisplayFor(model => model.SubCategory.Name)*@
                                <ul>
                                    @foreach (var subCategory in Model.ProductSubCategories)
                                    {
                                        <li>@subCategory.SubCategory.Name</li>
                                    }
                                </ul>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ShortDescription)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.ShortDescription)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.Description)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Image)
                            </dt>
                            <dd class="col-sm-10">
                                <img width="200" src="@Model.Image" alt="@Model.Name" />
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Images)
                            </dt>
                            <dd class="col-sm-10">
                                @if (Model.Images.Any())
                                {
                                    <div class="row">
                                        @foreach (var image in Model.Images)
                                        {
                                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                                <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title=""
                                                   data-image="@image.Img"
                                                   data-target="#image-gallery">
                                                    <img class="img-thumbnail"
                                                         src="@image.Img"
                                                         alt="Another alt text">
                                                </a>
                                            </div>
                                        }
                                    </div>
                                }
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FinalPrice)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FinalPrice)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProductTags)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ProductTags)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Status)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> 
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
