@model FossTech.Models.Review

@{
    ViewData["Title"] = "Create";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header pb-1">
            <h2>Rating & Review</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>


        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3 row">
                    <div class="col">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId" style=" border-radius: 10px;"></select>
                        
                    </div>
                    <div class="col">
                        <label asp-for="UserId" class="control-label"></label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" style=" border-radius: 10px;"></select>
                    </div>
                </div>

               
                <div class="rating">
                    <label class="control-label">Give Your Rating</label><br />
                    <label>
                        <input type="radio" asp-for="Rating" value="1" />
                        <span class="icon">★</span>
                    </label>
                    <label>
                        <input type="radio" asp-for="Rating" value="2" />
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                    </label>
                    <label>
                        <input type="radio" asp-for="Rating" value="3" />
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                    </label>
                    <label>
                        <input type="radio" asp-for="Rating" value="4" />
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                    </label>
                    <label>
                        <input type="radio" asp-for="Rating" value="5" />
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                        <span class="icon">★</span>
                    </label>
                </div>
                <div class="form-group mb-3">
                    @*<label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control" />*@
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Headline" class="control-label"></label>
                    <input asp-for="Headline" class="form-control" style="border-radius: 10px;" />
                    <span asp-validation-for="Headline" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="WrittenReview" class="control-label"></label>
                    <input asp-for="WrittenReview" class="form-control" style="border-radius: 10px;"/>
                    <span asp-validation-for="WrittenReview" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
