@model IEnumerable<FossTech.Models.BotAttempt>

@{
    ViewData["Title"] = "Index";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h2>Bot</h2>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <table id="simpletable" class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IpAddress)</th>
                            <th>@Html.DisplayNameFor(model => model.UserAgent)</th>
                            <th>@Html.DisplayNameFor(model => model.AttemptedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.Reason)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IpAddress)</td>
                                <td>@Html.DisplayFor(modelItem => item.UserAgent)</td>
                                <td>@Html.DisplayFor(modelItem => item.AttemptedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (ViewData["ShowModal"] != null && (bool)ViewData["ShowModal"])
{
    <div class="modal fade" id="securityModal" tabindex="-1" aria-labelledby="securityModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="securityModalLabel">Security Question</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <small class="text-muted">Please answer the security question:</small>
                    <label for="securityAnswer">What is the name of Your Organisation?</label>
                    <input type="text" id="securityAnswer" class="form-control" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="btnSubmitAnswer">Submit</button>
                </div>
            </div>
        </div>
    </div>
}
@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

}

@section Scripts {
    <script>
        $(document).ready(function () {
            var showModal = '@ViewData["ShowModal"]';

            if (showModal === "True") {
                $('#securityModal').modal('show');
            }

            var correctAnswers = ['veda', 'Veda', 'VedaEdTech'];

            $('#btnSubmitAnswer').click(function () {
                var answer = $('#securityAnswer').val().trim().toLowerCase();

                if (correctAnswers.some(function(correctAnswer) {
                    return correctAnswer.toLowerCase() === answer;
                })) {
                    $('#securityModal').modal('hide');
                    $('#simpletable').fadeIn();
                } else {
                    alert("Incorrect answer. Please try again.");
                }
            });
        });
    </script>
}

