@model FossTech.Models.Collection

@{
    ViewData["Title"] = "Details";
}


<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h1>Details</h1>

            <div>
                <h4>Collection</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>
                    <dd class="col-sm-10">
                        <img src=" @Html.DisplayFor(model => model.Image)" alt="@Model.Name" width="200"/>
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
        
    </div>
    </div>
