@model FossTech.Models.FontChange

@{
    ViewData["Title"] = "Index";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h1>Font Change</h1>
        </div>
        <div class="card-body">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="AddFontLinks" class="control-label"></label>
                    <textarea asp-for="AddFontLinks" class="form-control"></textarea>
                    <span asp-validation-for="AddFontLinks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Css" class="control-label"></label>
                    <textarea asp-for="Css" class="form-control"></textarea>
                    <span asp-validation-for="Css" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
