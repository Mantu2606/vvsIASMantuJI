@model FossTech.Areas.FossTech.ViewModels.UpdateUser

@{
    ViewData["Title"] = "Edit";
}

<div class="col-sm-12">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header pb-1">

            <h1>Edit</h1>


        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input asp-for="Id" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MobileNumber"></label>
                    <input asp-for="MobileNumber" class="form-control"/>
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 row">
                    <div class="col-md-6">
                        <label asp-for="Roles" class="col-form-label"></label>

                        <select multiple="multiple" data-style="btn-info" asp-for="Roles" class="selectpicker form-control" asp-items="ViewBag.Roles"></select>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-4 d-flex align-items-center">
                        <input type="checkbox" asp-for="isStudent" class="form-check-input me-2">
                        <label  class="form-check-label">Is Student</label>
                    </div>
                </div>

                <div style="position: relative;" class="form-group mb-3">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i style="position: absolute;top: 43px;right: 12px;" id="passwordEye1" class="fas fa-eye"></i>
                </div>
                <div style="position: relative;" class="form-group mb-3">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <i style="position: absolute;top: 43px;right: 12px;" id="passwordEye2" class="fas fa-eye"></i>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>


        </div>
    </div>
    <!-- Basic Form Inputs card end -->

</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>


@section styles
{
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <style>
        #passwordEye1, #passwordEye2 {
            cursor: pointer;
        }
    </style>
}

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/select2/js/select2.min.js"></script>


    <script>
        $(document).ready(function() {

            $("#Roles").select2();
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#passwordEye1").click(function (e) {
                // toggle the type attribute
                const type = $("#Password").attr('type') === 'password' ? 'text' : 'password';
                $("#Password").attr('type', type);

            });

            $("#passwordEye2").click(function (e) {
                // toggle the type attribute
                const type = $("#ConfirmPassword").attr('type') === 'password' ? 'text' : 'password';
                $("#ConfirmPassword").attr('type', type);

            });
        });

    </script>
}

