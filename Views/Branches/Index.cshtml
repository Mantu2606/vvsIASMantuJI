@model IEnumerable<FossTech.Models.Branch>

@{
    ViewData["Title"] = "Index";
}



<!--================Home Banner Area =================-->
<section class="banner_area my-4">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center" style="background:aliceblue">
                <div class="col-lg-6">
                    <div class="banner_content text-center">
                        @* <h2>Branches</h2> *@
                        <div class="page_link">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <a asp-controller="Branches" asp-action="Index">Branches</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Blog Area =================-->
<section class="blog_area section_gap">
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-12">
                <div class="blog_left_sidebar">

                    <article class="row blog_item">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-12 mb-4">
                                <div class="blog_post iframeeee" style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; background-color: #fff;box-shadow: rgba(14, 63, 126, 0.04) 0px 0px 0px 1px, rgba(42, 51, 69, 0.04) 0px 1px 1px -0.5px, rgba(42, 51, 70, 0.04) 0px 3px 3px -1.5px, rgba(42, 51, 70, 0.04) 0px 6px 6px -3px, rgba(14, 63, 126, 0.04) 0px 12px 12px -6px, rgba(14, 63, 126, 0.04) 0px 24px 24px -12px;">
                                    <a href="@item.GoogleMapLink" target="_blank" style="display: block; text-decoration: none; color: inherit;">
                                        @Html.Raw(item.GoogleIframe)
                                    </a>
                                    <div class="blog_details" style="margin-top: 15px;">
                                        <small style="color: #333; display: block; margin-bottom: 5px;">
                                            <i class="fa fa-envelope" style="margin-right: 5px;"></i>
                                            <a href="mailto:@item.Email" style="color: #333; text-decoration: none;">@item.Email</a>
                                        </small>
                                        <small style="color: #333; display: block; margin-bottom: 10px;">
                                            <i class="fa fa-phone" style="margin-right: 5px;"></i>
                                            <a href="tel:@item.Mobile" style="color: #333; text-decoration: none;">@item.Mobile</a>
                                        </small>
                                        <h2 style="margin: 0 0 10px 0; font-size: 1.5em; color: #000;">
                                            @item.BranchName
                                        </h2>
                                        <p style="margin: 0 0 15px 0; color: #666;">
                                            @item.Address
                                        </p>
                                        @if (item.GoogleMapLink != null)
                                        {
                                            <a href="@item.GoogleMapLink" target="_blank" class="blog_btn" style="display: inline-block; padding: 10px 15px; font-size: 14px; color: #fff; background-color: #007bff; border-radius: 4px; text-decoration: none;">View Full Map</a>
                                        }
                                    </div>
                                </div>
                            </div>


                        }
                    </article>

                   
                </div>
            </div>

        </div>
    </div>
</section>
<!--================Blog Area =================-->

<!-- /.content end -->
@section Styles{
    <style>
        .iframeeee iframe{
            height: 295px !important;
            width: 100% !important;
            border-top-right-radius: 0.5rem !important;
            border-top-left-radius: 0.5rem !important;
        }
    </style>
}
