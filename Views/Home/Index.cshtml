    .clickable::after {
        content: attr(data-title) "\A" attr(data-text);
        white-space: pre-wrap; /* Handle text wrapping */
        position: absolute;
        padding: 10px;
        background-color: transparent;
        color: #Black;
        border-radius: 8px;
        font-size: 14px;
        visibility: hidden;
        opacity: 0;
        transition: visibility 0s, opacity 0.3s ease-in-out;
        width: 300px;
    }

    .clickable:hover::after {
        visibility: visible;
        opacity: 1;
        background-color: attr(data-background-color);
        color: attr(data-color);
    }

    .clickable[data-tooltip-position="top"]::after {
        top: -30px; /* Tooltip appears above */
        left: 166%;
        transform: translateX(-50%);
        box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.1), 1px 1px 0px rgba(0, 0, 0, 0.1);
    }

    .clickable[data-tooltip-position="bottom"]::after {
