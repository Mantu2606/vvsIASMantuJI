@using System.ComponentModel
@model FossTech.Controllers.FranchiseViewModel
@{
    ViewBag.Title = "Franchise";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center" style="background:aliceblue">
                <div class="col-lg-6">
                    <div class="banner_content text-center">
                        @* <h2>Franchise</h2> *@
                        <div class="page_link">
                            <a asp-controller="Home" asp-action="Index" style="0 5px">Home</a>/
                            <a asp-controller="FAQs" asp-action="Index">Franchise</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!-- content start -->
<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-n6 bg-white mb-5 rounded-3 shadow-sm">

                    <div class="p-5">
                        <div class="row">
                            <div class="col-md-8 col-12">
                                <div class="pt-6 pb-1">
                                    <h1>@Model.Franchise.Title</h1>
                                    <h3>
                                        @Model.Franchise.SubTitle
                                    </h3>
                                </div>
                            </div>
                            <div class="col-md-4 p-3 shadow-sm border rounded border-primary bg-white">
                                <form asp-controller="Franchise" asp-action="Index" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="FullName" class="form-control" placeholder="Full Name"/>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number"/>
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="State" class="form-control" placeholder="State"/>
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="City" class="form-control" placeholder="City"/>
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Pincode" class="form-control" placeholder="Pincode"/>
                                        <span asp-validation-for="Pincode" class="text-danger"></span>
                                    </div>
                                    <div class="text-center">
                                        <button class="primary-btn" type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-n6 bg-white mb-5 rounded-3 shadow-sm">

                    <div class="p-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="pt-6 pb-1">
                                        @Html.Raw(Model.Franchise.Description)
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content end -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}