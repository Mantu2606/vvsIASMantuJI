@model FossTech.ViewModels.ForgotPassword

@{
    ViewData["Title"] = "ForgotPassword";
}
<style>
    .banner_area {
        position: relative;
        overflow: hidden;
    }

    .banner_inner {
        background-size: cover;
        background-position: center;
        height: 300px;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.6);
    }

    .banner_content h2 {
        font-size: 2.5rem;
        color: #fff;
    }

    .breadcrumb {
        background: transparent;
        padding: 0;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: '\f105';
        font-family: 'FontAwesome';
        color: #fff;
    }

    .breadcrumb a {
        color: #fff;
        text-decoration: none;
    }

        .breadcrumb a:hover {
            color: #d4d4d4;
        }

    .text-white {
        color: #fff !important;
    }

    .blog_area {
        background-color: #f9f9f9;
    }

    .comment-form {
        background-color: #fff;
        border-radius: 8px;
    }

    .form-control {
        border-radius: 0.25rem;
        box-shadow: none;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .position-relative i {
        color: #6c757d;
    }
</style>

