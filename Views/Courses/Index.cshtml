@model IEnumerable<FossTech.Models.ProductModels.Product>

@{
    ViewData["Title"] = "Courses";
}
<style>
    .course-image {
        transition: transform 0.3s ease;
    }

    .course-image:hover {
        transform: scale(1.05); /* Adjust the scale factor as desired */
    }

   .section-heading {
    font-size: 2.5rem; /* Large font size for prominence */
    font-weight: bold; /* Bold text for emphasis */
    color: #2c3e50; /* Darker color for better contrast */
    text-align: left; /* Left-align the text */
    margin: 20px 0; /* Vertical margins */
    padding: 10px 0; /* Padding for breathing room */
    border-bottom: 3px solid #3498db; /* Bottom border with a vibrant color */
    position: relative; /* For the pseudo-element */
}

.section-heading::before {
    content: ''; /* Pseudo-element for decorative line */
    position: absolute; /* Position relative to the heading */
    left: 0; /* Align to the left */
    bottom: 0; /* Position at the bottom of the heading */
    width: 50px; /* Width of the line */
    height: 3px; /* Thickness of the line */
    background-color: #3498db; /* Color matching the border */
    border-radius: 2px; /* Slight rounding */
}

.section-heading:hover {
    color: #2980b9; /* Change color on hover */
    transition: color 0.3s ease; /* Smooth transition for hover effect */
}


</style>

<!--================Home Banner Area =================-->
<section class="banner_area my-3">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center" style="background:aliceblue">
                <div class="col-lg-6">
                    <div class="banner_content text-center">
                        <div class="page_link">
                            <a asp-controller="Home" asp-action="Index" style="color:black; margin:0 5px">Home</a>/
                            @if (Model != null && Model.Any() && Model.FirstOrDefault().ProductCategories != null && Model.FirstOrDefault().ProductCategories.Any() && Model.FirstOrDefault().ProductCategories.FirstOrDefault().Category != null)
                            {
                                 <a href="#">@Model.FirstOrDefault().ProductCategories.FirstOrDefault().Category.Name</a>
                            }
                            else
                            {
                                <a asp-controller="Courses" asp-action="Index" style="color:black">Courses</a>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="sections_area my-5">
    <div class="container">
        @if (ViewBag.Sections != null)
        {
            foreach (var item in ViewBag.Sections)
            {
                <div class="row mb-4" id="@item.Slug">
                    <div class="col-12">
                        <h1 class="section-heading">@item.Name</h1>

                    </div>
                    @if (item.Products != null)
                    {
                        foreach (var product in item.Products)
                        {
                            <div class="col-md-3 mb-4">
                                <div class="card">
                                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@product.Id" asp-route-slug="@product.Slug">
                                        <img class="card-img-top img-fluid rounded-top course-image" src="@product.Image" alt="@product.Name" />
                                    </a>
                                    <div class="card-body" style="background:var(--footerbackground)">
                                        <h5 class="card-title" style="color:var(--footertext)">
                                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@product.Id" asp-route-slug="@product.Slug">
                                                @product.Name ( Rs. @product.FinalPrice.ToString("N0") )
                                            </a>


                                        </h5>
                                        <p class="card-text">@product.ShortDescription</p>
                                        <div class="text-center">
                                            @if (product.PDF != null)
                                            {
                                                <a download="@product.PDF" href="@product.PDF" class="btn btn-primary"><i class="fa-solid fa-download"></i> PDF</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
    </div>
</section>



