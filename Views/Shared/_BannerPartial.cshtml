@model IEnumerable<FossTech.Models.SliderImage>
<style>
    @@media (max-width: 576px) {
    .carousel-inner {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .carousel-item img {
        width: 100%;
        height: auto;
        max-height: 400px; /* Adjust max height to fit mobile view */
    }

    .carousel-indicators {
        bottom: 10px; /* Adjust indicator position if needed */
    }

    .carousel-indicators li {
        width: 8px;
        height: 8px;
        margin: 2px; /* Adjust margin for better spacing */
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 30px; /* Reduce size of the control buttons */
        height: 30px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 20px;
        height: 20px;
        background-size: 100%; /* Adjust icon size */
    }
}
</style>
  @if (Model.Any())
    {
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@Model.ElementAt(i).Image" class="d-block w-100" alt="...">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
