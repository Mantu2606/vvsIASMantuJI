    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const hamburger = document.querySelector('.tl-hamburger');
          const navMenu = document.querySelector('.tl-nav-menu');

          if (hamburger && navMenu) {
            hamburger.addEventListener('click', function (e) {
              e.preventDefault();
              navMenu.classList.toggle('active');
            });
          }

          // Mobile dropdown toggle: if a menu item is tl-dropdown, clicking its <a> toggles submenu on mobile
          function isMobile() { return window.innerWidth <= 991; }

          document.querySelectorAll('.tl-nav-item.tl-dropdown > a').forEach(function (link) {
            link.addEventListener('click', function (e) {
              if (isMobile()) {
                e.preventDefault();
                const parent = this.parentElement;
                parent.classList.toggle('open');
              }
            });
          });

          // optional: close nav if user taps outside (mobile)
          document.addEventListener('click', function (e) {
            if (!isMobile()) return;
            const insideNav = e.target.closest('.tl-4-top-header');
            if (!insideNav) {
              if (navMenu) navMenu.classList.remove('active');
              document.querySelectorAll('.tl-nav-item.tl-dropdown.open').forEach(el => el.classList.remove('open'));
            }
          });

          // handle resize: remove mobile-only classes when back to desktop
          window.addEventListener('resize', function () {
            if (!isMobile()) {
              document.querySelectorAll('.tl-nav-item.tl-dropdown.open').forEach(el => el.classList.remove('open'));
              if (navMenu) navMenu.classList.remove('active');
            }
          });
        });
    </script>



