        text-align: center;
        margin-top: 15px;
    }

    .trainer-name {
        font-weight: bold;
        margin-bottom: 10px;
        font-size: 20px;
    }

    .trainer-designation {
        font-size: 18px;
        color: #555;
        margin-bottom: 15px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .single-trainer {
