@section Scripts {
    <script>
        function toggleDescription(itemId) {
            var description = document.getElementById('desc-' + itemId);
            var toggleButton = document.getElementById('toggle-desc-' + itemId);

            var currentHeight = description.style.maxHeight;

            if (currentHeight === '4.8em' || currentHeight === '') {
                description.style.maxHeight = 'none';
                toggleButton.textContent = 'Show Less';
            } else {
                description.style.maxHeight = '4.8em';
                toggleButton.textContent = 'Show More';
            }
        }
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const toggleLinks = document.querySelectorAll(".toggle-description");

            toggleLinks.forEach(function(link) {
                link.addEventListener("click", function() {
                    const targetId = this.getAttribute("data-target");
                    const description = document.getElementById(targetId);
                    const isExpanded = description.style.maxHeight === "none";

                    if (isExpanded) {
                        description.style.maxHeight = "75px"; // original collapsed height
                        this.innerHTML = "Show More";
                    } else {
                        description.style.maxHeight = "none"; // expanded height
                        this.innerHTML = "Show Less";
                    }
                });
            });
        });
    </script>

