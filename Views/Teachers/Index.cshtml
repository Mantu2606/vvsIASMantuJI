@if (Model.Director.Any())
{
    <div class="testimonial_area section_gap mb-5">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-12">
                    <div class="main_title text-center" style="background-color: var(--footerbackground); ">
                        <h2 class="mb-0" style=" color:var(--buttontext);"> Founder & Co-Founder</h2>
                    </div>
                </div>
            </div>

            <div class="row my-3">
                @foreach (var item in Model.Director)
                {
                    <div class="col-12 col-md-6 mb-4">
                        <div class="card shadow-sm border-0" style="transition: transform 0.2s; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);">
                            <div class="row g-0">
                                <div class="col-12 col-md-4 d-flex justify-content-center align-items-center">
                                    <a asp-controller="Teachers" asp-action="Details" asp-route-id="@item.Id" asp-route-slug="@item.Slug">
                                        <img src="@item.Image" class="img-fluid rounded" alt="Director Image" style="border-radius: 8px; max-width: 80%; height: auto;" />
                                    </a>
                                </div>

                                <div class="col-12 col-md-8">
                                    <div class="card-body" style="background-color: #f8f9fa;">
                                        <a asp-controller="Teachers" asp-action="Details" asp-route-id="@item.Id" asp-route-slug="@item.Slug">
                                            <h5 class="card-title" style="font-size: 1.8rem; font-weight: bold; color: var(--buttonbackground)">@item.Name</h5>
                                            <p class="card-text text-muted" style="font-size: 1.1rem;">@item.Designation</p>
                                            <p class="mb-1" style="font-size: 0.9rem;">
                                                <span class="text-info"><i class="fas fa-building"></i> @item.Department</span> |
                                                <span class="text-info"><i class="fas fa-graduation-cap"></i> @item.Education</span>
                                            </p>
                                        </a>

                                        <div class="text-justify description"
                                             style="font-size: 0.95rem; line-height: 1.6; color:black; overflow: hidden; max-height: 4.8em; transition: max-height 0.3s ease;"
                                             id="desc-@item.Id">
                                            @Html.Raw(item.Description)
                                        </div>

                                        <a href="javascript:void(0);" class="text-info" id="toggle-desc-@item.Id" onclick="toggleDescription('@item.Id')">Show More</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>

            <script>
                function toggleDescription(itemId) {
                    var description = document.getElementById('desc-' + itemId);
                    var toggleButton = document.getElementById('toggle-desc-' + itemId);

                    // Get the current max-height value
                    var currentHeight = description.style.maxHeight;

                    // If it's collapsed, expand it
                    if (currentHeight === '4.8em' || currentHeight === '') {
                        description.style.maxHeight = 'none';  // Show full content
                        toggleButton.textContent = 'Show Less'; // Change to 'Show Less'
                    } else {
                        description.style.maxHeight = '4.8em';
                        toggleButton.textContent = 'Show More';
                    }
                }
            </script>



        </div>
    </div>

}
