            .single-trainer .thumb

    {
        overflow: hidden;
        border-radius: 50%;
        width: 150px;
        height: 150px;
    }

    .single-trainer .thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

