@model FossTech.Models.StudyMaterialModels.StudyMaterial

@{
    ViewData["Title"] = Model.Name;
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="banner_content text-center">
                        <h2 class="text-white mb-3">@Model.Name</h2>
                        <div class="page_link">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <span class="mx-2">/</span>
                            <a asp-controller="StudyMaterials" asp-action="Index">Study Materials</a>
                            <span class="mx-2">/</span>
                            <a href="#" class="active">@Model.Name</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->

<!--================ Study Material Details Section =================-->
<section class="study_material_details section_gap_top">
    <div class="container">
        <div class="row">
            <!-- Study Material Info -->
            <div class="col-lg-4 mb-4">
                <div class="material_info_card">
                    <div class="material_thumbnail">
                        @if (!string.IsNullOrEmpty(Model.ThumbnailImage))
                        {
                            <img src="@Model.ThumbnailImage" alt="@Model.Name" class="img-fluid rounded">
                        }
                        else
                        {
                            <div class="placeholder_thumbnail">
                                <i class="fas fa-book-open"></i>
                            </div>
                        }
                    </div>
                    
                    <div class="material_details">
                        <h3 class="material_title">@Model.Name</h3>
                        
                        <div class="material_meta">
                            @if (Model.Board != null)
                            {
                                <div class="meta_item">
                                    <i class="fas fa-chalkboard mr-2"></i>
                                    <span>Board: @Model.Board.Name</span>
                                </div>
                            }
                            @if (Model.Subject != null)
                            {
                                <div class="meta_item">
                                    <i class="fas fa-book mr-2"></i>
                                    <span>Subject: @Model.Subject.Name</span>
                                </div>
                            }
                            @if (Model.Standard != null)
                            {
                                <div class="meta_item">
                                    <i class="fas fa-graduation-cap mr-2"></i>
                                    <span>Standard: @Model.Standard.Name</span>
                                </div>
                            }
                        </div>
                        
                        <div class="material_price">
                            @if (Model.FinalPrice.HasValue && Model.FinalPrice.Value > 0)
                            {
                                <div class="price_display">
                                    <span class="current_price">₹@Model.FinalPrice.Value.ToString("N2")</span>
                                    @if (Model.DiscountAmount > 0)
                                    {
                                        <span class="original_price">₹@Model.BasePrice?.ToString("N2")</span>
                                        <span class="discount_badge">@Model.DiscountPercentage% OFF</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="price_display">
                                    <span class="free_price">Free</span>
                                </div>
                            }
                        </div>
                        
                        <div class="material_stats">
                            <div class="stat_item">
                                <i class="fas fa-file-pdf"></i>
                                <span>@Model.PDFs.Count() PDF Files</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- PDF Files Section -->
            <div class="col-lg-8">
                <div class="pdf_section">
                    <div class="section_header">
                        <h4 class="section_title">
                            <i class="fas fa-file-pdf mr-2"></i>
                            Study Material Files
                        </h4>
                        <p class="section_subtitle">Click on any file to view or download</p>
                    </div>
                    
                    @if (!Model.PDFs.Any())
                    {
                        <div class="empty_pdfs">
                            <i class="fas fa-file-pdf fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No PDF Files Available</h5>
                            <p class="text-muted">This study material doesn't have any PDF files yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="pdf_grid">
                            @foreach (var item in Model.PDFs)
                            {
                                <div class="pdf_card">
                                    <div class="pdf_icon">
                                        <i class="fas fa-file-pdf"></i>
                                    </div>
                                    <div class="pdf_info">
                                        <h6 class="pdf_title">PDF File @(Model.PDFs.ToList().IndexOf(item) + 1)</h6>
                                        <p class="pdf_desc">Study material content</p>
                                    </div>
                                    <div class="pdf_actions">
                                        <button class="btn btn-primary btn-sm view_pdf" data-pdf-url="@Url.Content(item.PDF)">
                                            <i class="fas fa-eye mr-1"></i>View
                                        </button>
                                        <a href="@Url.Content(item.PDF)" class="btn btn-outline-primary btn-sm" download>
                                            <i class="fas fa-download mr-1"></i>Download
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Study Material Details Section =================-->

<!-- PDF Viewer Modal -->
<div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pdfModalLabel">PDF Viewer</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <iframe id="pdfViewer" src="" width="100%" height="600px" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .study_material_details {
            padding: 80px 0;
            background: #f8f9fa;
        }

        .material_info_card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            height: 100%;
        }

        .material_thumbnail {
            height: 250px;
            overflow: hidden;
        }

        .material_thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .placeholder_thumbnail {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 4rem;
        }

        .material_details {
            padding: 25px;
        }

        .material_title {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 1.5rem;
            line-height: 1.3;
        }

        .material_meta {
            margin-bottom: 25px;
        }

        .meta_item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            color: #555;
            font-size: 0.95rem;
        }

        .meta_item i {
            color: #3498db;
            width: 20px;
        }

        .material_price {
            margin-bottom: 25px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
        }

        .price_display {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }

        .current_price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #27ae60;
        }

        .original_price {
            font-size: 1.1rem;
            color: #95a5a6;
            text-decoration: line-through;
        }

        .free_price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #27ae60;
        }

        .discount_badge {
            background: #e74c3c;
            color: white;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .material_stats {
            border-top: 1px solid #eee;
            padding-top: 20px;
        }

        .stat_item {
            display: flex;
            align-items: center;
            color: #555;
        }

        .stat_item i {
            color: #e74c3c;
            margin-right: 10px;
        }

        .pdf_section {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .section_header {
            margin-bottom: 30px;
            text-align: center;
        }

        .section_title {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .section_subtitle {
            color: #7f8c8d;
            margin: 0;
        }

        .empty_pdfs {
            text-align: center;
            padding: 60px 20px;
        }

        .pdf_grid {
            display: grid;
            gap: 20px;
        }

        .pdf_card {
            display: flex;
            align-items: center;
            padding: 20px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .pdf_card:hover {
            border-color: #3498db;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.2);
        }

        .pdf_icon {
            width: 60px;
            height: 60px;
            background: #e74c3c;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin-right: 20px;
        }

        .pdf_info {
            flex: 1;
        }

        .pdf_title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .pdf_desc {
            color: #7f8c8d;
            margin: 0;
            font-size: 0.9rem;
        }

        .pdf_actions {
            display: flex;
            gap: 10px;
        }

        .btn-sm {
            padding: 8px 16px;
            font-size: 0.85rem;
        }

        .modal-xl {
            max-width: 90%;
        }

        @@media (max-width: 768px) {
            .study_material_details {
                padding: 40px 0;
            }
            
            .pdf_card {
                flex-direction: column;
                text-align: center;
            }
            
            .pdf_icon {
                margin-right: 0;
                margin-bottom: 15px;
            }
            
            .pdf_actions {
                margin-top: 15px;
                justify-content: center;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle PDF view button clicks
            $('.view_pdf').click(function() {
                var pdfUrl = $(this).data('pdf-url');
                $('#pdfViewer').attr('src', pdfUrl);
                $('#pdfModal').modal('show');
            });
            
            // Clear PDF viewer when modal is closed
            $('#pdfModal').on('hidden.bs.modal', function () {
                $('#pdfViewer').attr('src', '');
            });
        });
    </script>
}

