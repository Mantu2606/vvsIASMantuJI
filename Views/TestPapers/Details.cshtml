@model FossTech.Models.TestPaperModels.TestPaper

@{
    ViewData["Title"] = "Test Papers";
}


<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center" style="background:aliceblue">
                <div class="col-lg-6">
                    <div class="banner_content text-center">
                        @* <h2>Study Materials</h2> *@
                        <div class="page_link">
                            <a asp-controller="Home" asp-action="Index" style="margin:0 5px">Home</a>/
                            <a href="#">@Model.Name</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->

<section class="feature_area section_gap_top">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.PDFs)
            {
                <div class="col-12 col-md-4 hovcat">
                    
                        <div class="single_feature">
                            
                            <embed style="width: 100%;" src="@item.PDF" />
                            <div class="desc text-center">
                            <a data-fancybox data-type="iframe" data-src="@Url.Content(item.PDF)" href="javascript:;">
                                <h4 class="mt-3 mb-2">View Full PDF <i class="fa fa-eye"></i></h4>
                            </a>
                            </div>
                        </div>
                  
                </div>
            }
        </div>
    </div>
</section>
<!--================ End Feature Area =================-->


@section Styles{
    <link href="https://125naroom.com/distance/css/jquery.fancybox.css" rel="stylesheet" type="text/css" />
    <style>
        .hxdnRy {
            position: absolute;
            left: 10px;
            padding: 5px 10px;
            font-size: 12px;
            line-height: 16px;
            box-shadow: 0 3px 3px rgba(0,0,0,0.35);
            top: 20px;
            font-family: Din Regular;
            font-style: normal;
            -webkit-text-decoration: none;
            text-decoration: none;
            font-weight: normal;
            color: var(--buttontext);
            background-color: var(--buttonbackground);
            border-color: var(--buttontext);
        }

        .gallery-cat-list {
            padding: 0;
        }

            .gallery-cat-list li {
                display: inline-block;
            }

                .gallery-cat-list li a {
                    margin: 10px;
                    background: var(--headerbackground);
                    color: #fff;
                    padding: 5px 24px;
                    margin: 10px;
                    background: var(--headerbackground);
                    color: #fff;
                    min-width: 150px;
                    text-align: center;
                }
    </style>
}
@section Scripts{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>
}

